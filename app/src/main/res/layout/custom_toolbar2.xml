<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background = "@drawable/gradient_drawable2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:textColor="@android:color/white"
            android:fontFamily="@font/golden_pepper"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/btnFilter2" />


        <ImageButton
            android:id="@+id/btnFilter2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/filter"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Filter" />


        <ImageButton
            android:id="@+id/btnSort2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btnFilter2"
            android:layout_marginEnd="10dp"
            android:src="@drawable/sort"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Sort" />


        <ImageButton
            android:id="@+id/btnOrders"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btnSort2"
            android:layout_marginEnd="10dp"
            android:src="@drawable/event"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Orders" />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>