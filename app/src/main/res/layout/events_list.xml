<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="550dp"
        android:background="@drawable/gradient_drawable3">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/golden_pepper"
            android:text="Event Name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="23dp"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_marginTop="7dp"
            android:text="EventDescription"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescription"
            android:layout_marginTop="7dp"
            android:text="StartDate"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/txtDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDate"
            android:layout_marginTop="7dp"
            android:text="EndDate"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            />


        <ImageView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="260dp"
            android:layout_below="@id/txtDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_launcher_background" />

        <Spinner
            android:id="@+id/spinnerTicketCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editTextTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerTicketCategory"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Enter ticket number"
            android:inputType="number"
            android:textColorHint="?android:textColorPrimary" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTickets"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Buy"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
